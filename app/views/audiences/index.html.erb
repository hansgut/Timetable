<div class="col l7 push-l2 s12">
  <ul class="collection with-header">
      <li class="collection-header"><h4>Аудитории</h4></li>
      <% @audiences.each do |audience| %>
        <li class="collection-item">
          <div>
            <%= link_to audience_path(audience) do %>
              <%= audience.name %>
            <% end %>
            <% if current_user.try(:admin?) %>
              <%= link_to audience_path(audience), method: :delete, data: { confirm: 'Вы уверены?' } do %>
                <b class="secondary-content">
                  <i class="material-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Удалить">delete_sweep</i>
                </b>
              <% end %>

              <%= link_to edit_audience_path(audience.id) do %>
                <b class="secondary-content">
                  <i class="material-icons tooltipped" data-position="top" data-delay="50" data-tooltip="Изменить">edit</i>
                </b>
              <% end %>
            <% end %>
          </div>
        </li>
      <% end %>
  </ul>
</div>
