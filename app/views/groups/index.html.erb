<h1>ГРУППЫ ВСЕ ТУТ</h1>
<% @groups.each do |group| %>
  <p>
    <b><%= group.name %></b>
    <%= link_to 'Изменить', edit_group_path(group.id) %>
    <%= link_to 'Удалить', group_path(group), method: :delete, data: { confirm: 'Вы уверены?' } %>
  </p>
<% end %>
<br>
<%= link_to 'Добавить группу', new_group_path %>
